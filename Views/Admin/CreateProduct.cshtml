@model TechShop1.ViewModels.HangHoaModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4 p-4">
        <h2 class="text-primary mb-4 border-bottom pb-2">Thêm hàng hóa mới</h2>

        <form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Tên sản phẩm</label>
                    <input asp-for="TenHh" class="form-control" placeholder="Nhập tên sản phẩm..." />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Danh mục loại</label>
                    <select asp-for="MaLoai" class="form-select" asp-items="ViewBag.MaLoai"></select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Đơn giá</label>
                    <input asp-for="DonGia" type="number" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Hình ảnh sản phẩm</label>
                    <input type="file" name="Hinh" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Mô tả ngắn</label>
                <input asp-for="MoTaDonVi" class="form-control" />
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold">Chi tiết sản phẩm</label>
                <textarea asp-for="MoTa" class="form-control" rows="5"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4 rounded-pill">Lưu sản phẩm</button>
                <a asp-action="HangHoa" class="btn btn-outline-secondary px-4 rounded-pill">Quay lại</a>
            </div>
        </form>
    </div>
</div>