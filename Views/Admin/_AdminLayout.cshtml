<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <!-- MENU -->
            <div class="col-2 bg-dark text-white min-vh-100 p-3">
                <h4>ADMIN TECHSHOP</h4>
                <hr />
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a> 
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="HangHoa"><i class="bi bi-box-seam me-2"></i>Hàng hóa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-action="DonHang"><i class="bi bi-cart-check me-2"></i>Đơn hàng</a>
                    </li>
                    <li class="nav-item mb-3">
                        <a class="nav-link btn btn-info text-white text-start rounded-pill px-3 shadow-sm"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-shop me-2"></i> Xem trang bán hàng
                        </a>
                    </li>
                    <hr />
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="KhachHang" asp-action="DangXuat"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a> 
                    </li>
                </ul>
            </div>

            <!-- NỘI DUNG -->
            <div class="col-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
