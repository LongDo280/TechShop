@model TechShop1.ViewModels.EditProfileVM
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}

<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h4 class="fw-bold text-primary mb-4 border-bottom pb-2">Chỉnh sửa thông tin cá nhân</h4>

                <form asp-action="EditProfile" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label small fw-bold">Họ và tên</label>
                        <input asp-for="HoTen" class="form-control rounded-pill border-light bg-light" />
                        <span asp-validation-for="HoTen" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DienThoai" class="form-label small fw-bold">Số điện thoại</label>
                        <input asp-for="DienThoai" class="form-control rounded-pill border-light bg-light" />
                        <span asp-validation-for="DienThoai" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold">Email</label>
                        <input asp-for="Email" class="form-control rounded-pill border-light bg-light" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DiaChi" class="form-label small fw-bold">Địa chỉ nhận hàng</label>
                        <textarea asp-for="DiaChi" class="form-control rounded-4 border-light bg-light" rows="3"></textarea>
                        <span asp-validation-for="DiaChi" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary rounded-pill py-2 fw-bold">Lưu thay đổi</button>
                        <a asp-action="Profile" class="btn btn-outline-secondary rounded-pill py-2">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>