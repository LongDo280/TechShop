<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	<meta charset="utf-8">
	<meta content="" name="keywords">
	<meta content="" name="description">
	<meta property="og:type" content="website">
	<meta property="og:url" content="https://techshop.com.vn/">
	<meta property="og:title" content="TechShop – Thế Giới Công Nghệ">
	<meta property="og:description" content="Laptop, PC, Gaming Gear chính hãng giá tốt nhất.">
	<meta property="og:image" content="/img/banner1.jpg">

	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
	<link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />

	<!-- Libraries Stylesheet -->
	<link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
	<link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


	<!-- Customized Bootstrap Stylesheet -->
	<link href="~/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="~/css/style.css" rel="stylesheet">
</head>
<body>
	<div>
		<!-- Spinner Start -->
		<div id="spinner" class="w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
			<div class="spinner-grow text-primary" role="status"></div>
		</div>
		<!-- Spinner End -->
		<!-- Navbar start -->
		<div class="container-fluid fixed-top">
			<div class="container topbar bg-primary d-none d-lg-block">
				<div class="d-flex justify-content-between">
					<div class="top-info ps-2">
						<small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">District 1, HCM City</a></small>
						<small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">TechShop@gmail.com.vn</a></small>
					</div>
					<div class="top-link pe-2">
						<a asp-controller="Home" asp-action="PrivacyPolicy" class="text-white">
							<small class="text-white mx-2">Privacy Policy</small>
						</a>/
						<a asp-controller="Home" asp-action="TermsOfUse" class="text-white">
							<small class="text-white mx-2">Terms of Use</small>
						</a>/
						<a asp-controller="Home" asp-action="SalesRefunds" class="text-white">
							<small class="text-white ms-2">Sales and Refunds</small>
						</a>
					</div>
				</div>
			</div>
			<div class="container px-0">
				<nav class="navbar navbar-light bg-white navbar-expand-xl">
					<a asp-controller="Home" asp-action="Index" class="navbar-brand"><h1 class="text-primary display-6">TechShop</h1></a>
					<button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
						<span class="fa fa-bars text-primary"></span>
					</button>
					<div class="collapse navbar-collapse bg-white" id="navbarCollapse">
						<div class="navbar-nav mx-auto">
							<a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
							<a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link">Shop</a>
							<a asp-controller="KhachHang" asp-action="DangKy" class="nav-item nav-link">Đăng Ký</a>
							<div class="nav-item dropdown">
								<a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
								<div class="dropdown-menu m-0 bg-secondary rounded-0">
									<a asp-controller="Home" asp-action="Index">Home</a>
									<a asp-controller="Cart" asp-action="Index">Cart</a>
									<a asp-controller="Cart" asp-action="CheckOut">Checkout</a>
								</div>
							</div>
							<a asp-controller="Home" asp-action="Contact" class="nav-item nav-link">Contact</a>
						</div>
						<div class="d-flex m-3 me-0 align-items-center">

							@* Thanh tìm kiếm trực tiếp trên Navbar với hiệu ứng bo góc hiện đại *@
							<div class="d-none d-xl-flex me-4 shadow-sm rounded-pill border overflow-hidden">
								<form asp-controller="HangHoa" asp-action="Search" method="get" class="d-flex bg-white">
									<input type="search" name="query"
										   class="form-control border-0 ps-3 py-2 bg-transparent"
										   placeholder="Tìm laptop, linh kiện..."
										   style="width: 250px; outline: none; box-shadow: none;">
									<button type="submit" class="btn btn-primary border-0 rounded-0 px-3 transition-all hover-up">
										<i class="fas fa-search"></i>
									</button>
								</form>
							</div>

							@await Component.InvokeAsync("Cart")

							@* ===== USER LOGIN AREA ===== *@
							@if (!User.Identity.IsAuthenticated)
							{
								<a asp-controller="KhachHang"
								   asp-action="DangNhap"
								   class="my-auto ms-3"
								   title="Đăng nhập">
									<i class="fas fa-user fa-2x"></i>
								</a>
							}
							else
							{
								<div class="dropdown ms-3">
									<a class="text-dark dropdown-toggle"
									   href="#"
									   role="button"
									   data-bs-toggle="dropdown"
									   aria-expanded="false">
										<i class="fas fa-user fa-2x"></i>
									</a>

									<ul class="dropdown-menu dropdown-menu-end">
										<li class="dropdown-item-text fw-bold">
											👋 @User.Identity.Name
										</li>

										@if (User.IsInRole("Admin"))
										{
											<li>
												<a class="dropdown-item"
												   asp-controller="Admin"
												   asp-action="Index">
													<i class="fas fa-user-shield"></i> Trang Admin
												</a>
											</li>
										}

										<li>
											<a class="dropdown-item"
											   asp-controller="KhachHang"
											   asp-action="Profile">
												<i class="fas fa-id-card"></i> Hồ sơ
											</a>
										</li>

										<li><hr class="dropdown-divider" /></li>

										<li>
											<form asp-controller="KhachHang"
												  asp-action="DangXuat"
												  method="post">
												@Html.AntiForgeryToken()
												<button type="submit"
														class="dropdown-item text-danger">
													<i class="fas fa-sign-out-alt"></i> Đăng xuất
												</button>
											</form>
										</li>
									</ul>
								</div>
							}
						</div>

					</div>
				</nav>
			</div>
		</div>
		<!-- Navbar End -->
		<!-- Modal Search Start -->
		<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-fullscreen">
				<div class="modal-content rounded-0">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">Tìm kiếm sản phẩm</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body d-flex align-items-center">
						<form asp-controller="HangHoa" asp-action="Search" method="get" class="input-group w-75 mx-auto d-flex">
							<input type="search" name="query" class="form-control p-3" placeholder="Nhập tên sản phẩm..." aria-describedby="search-icon-1">
							<button type="submit" id="search-icon-1" class="input-group-text p-3 border-0">
								<i class="fa fa-search text-primary"></i>
							</button>
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- Modal Search End -->
		<!-- Hero Start -->
		@* Kiểm tra nếu Controller là Home và Action là Index thì mới hiện Hero *@
		@{
			var controller = ViewContext.RouteData.Values["controller"]?.ToString();
			var action = ViewContext.RouteData.Values["action"]?.ToString();
		}

		@if (controller == "Home" && action == "Index")
		{
			<div class="container-fluid py-5 mb-5 hero-header-tech">
				<div class="container py-5">
					<div class="row g-5 align-items-center">
						<div class="col-lg-6">
							<h4 class="mb-3 text-info">Công nghệ chính hãng</h4>
							<h1 class="mb-4 display-4 text-white fw-bold">
								TechShop – Thế Giới Công Nghệ
							</h1>
							<p class="text-light mb-4">
								Laptop • PC • Gaming Gear • Phụ kiện chính hãng<br />
								Giá tốt – Bảo hành uy tín – Giao hàng nhanh
							</p>
							<a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary px-5 py-3 rounded-pill">
								Mua sắm ngay 🚀
							</a>
						</div>
						<div class="col-lg-6 text-center">
							<img src="~/img/banner1.jpg" class="img-fluid" alt="Tech Products">
						</div>
					</div>
				</div>
			</div>
		}
		<!-- Hero End -->
		@RenderBody()
		@await Html.PartialAsync("_Footer")
	</div>
	<!-- Back to Top -->
	<a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


	@* Thay link Google bằng file nội bộ trong project *@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/easing/easing.min.js"></script>
	<script src="~/lib/waypoints/waypoints.min.js"></script>
	<script src="~/lib/lightbox/js/lightbox.min.js"></script>
	<script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

	<script src="~/js/main.js"></script>

	@* Quan trọng: Scripts của Index phải nằm SAU jQuery *@
	@RenderSection("Scripts", required: false)
