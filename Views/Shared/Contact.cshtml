@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container-fluid page-header py-5 shadow-sm">
    <div class="container text-center py-5">
        <h1 class="text-white display-5 fw-bold mb-3">Liên Hệ</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Trang chủ</a></li>
                <li class="breadcrumb-item active text-white-50" aria-current="page">Liên hệ</li>
            </ol>
        </nav>
    </div>
</div>
<div class="container-fluid py-5 bg-light">
    <div class="container py-5">
        <div class="p-5 bg-white rounded-4 shadow-sm">
            <div class="row g-4">
                <div class="col-12 text-center mx-auto mb-5" style="max-width: 700px;">
                    <h1 class="display-4 fw-bold text-primary">Liên Hệ Với Chúng Tôi</h1>
                    <p class="mb-4 text-muted">TechShop luôn lắng nghe và sẵn sàng hỗ trợ bạn 24/7. Hãy gửi tin nhắn cho chúng tôi nếu bạn có bất kỳ thắc mắc nào.</p>
                </div>

                <div class="col-lg-12 mb-4">
                    <div class="rounded-4 overflow-hidden shadow-sm border" style="height: 450px;">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.520195255977!2d106.68891131458902!3d10.771421192324944!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f3c3a446337%3A0x633454722881a892!2sDinh%20%C4%90%E1%BB%99c%20L%E1%BA%ADp!5e0!3m2!1svi!2s!4v1625000000000!5m2!1svi!2s"
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>

                <div class="col-lg-7">
                    <form action="" class="">
                        <input type="text" class="w-100 form-control border-0 py-3 mb-4 rounded-pill bg-light ps-4" placeholder="Họ và tên của bạn">
                        <input type="email" class="w-100 form-control border-0 py-3 mb-4 rounded-pill bg-light ps-4" placeholder="Địa chỉ Email">
                        <textarea class="w-100 form-control border-0 mb-4 rounded-4 bg-light ps-4 pt-3" rows="5" cols="10" placeholder="Nội dung lời nhắn"></textarea>
                        <button class="w-100 btn btn-primary py-3 rounded-pill fw-bold text-uppercase hover-up" type="submit">Gửi tin nhắn ngay</button>
                    </form>
                </div>

                <div class="col-lg-5">
                    <div class="d-flex p-4 rounded-4 mb-4 bg-light shadow-sm">
                        <i class="fas fa-map-marker-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4 class="fw-bold">Địa chỉ</h4>
                            <p class="mb-2">123 Đường Công Nghệ, Quận 1, TP.HCM</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded-4 mb-4 bg-light shadow-sm">
                        <i class="fas fa-envelope fa-2x text-primary me-4"></i>
                        <div>
                            <h4 class="fw-bold">Email hỗ trợ</h4>
                            <p class="mb-2">support@techshop.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded-4 mb-4 bg-light shadow-sm">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4"></i>
                        <div>
                            <h4 class="fw-bold">Điện thoại</h4>
                            <p class="mb-2">(+84) 123 456 789</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>